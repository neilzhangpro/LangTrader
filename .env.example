# ============================================================================
# LangTrader Environment Configuration Template
#
# 复制此文件为 .env 并填写实际值：
#   cp .env.example .env
#
# 注意：.env 文件包含敏感信息，已被 .gitignore 忽略
# ============================================================================

# =============================================================================
# Database Configuration
# =============================================================================
# 本地开发连接字符串
DATABASE_URL="postgresql://your_user:your_password@localhost:5432/langtrader_pro"

# Docker 数据库配置
POSTGRES_USER=your_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=langtrader_pro

# =============================================================================
# Security Configuration
# =============================================================================
# API 密钥列表（JSON 格式）
# 生产环境请使用强随机字符串，如: openssl rand -hex 32
API_KEYS='["your-secure-api-key-here"]'

# 应用密钥（用于 session 等）
SECRET_KEY=change-this-to-a-secure-random-string

# 加密密钥（用于加密存储交易所密钥）
# 生成方法: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key

# =============================================================================
# Application Configuration
# =============================================================================
DEBUG=false
ENVIRONMENT=development

# =============================================================================
# Optional: LangSmith Tracing
# =============================================================================
LANGSMITH_API_KEY=

# =============================================================================
# Frontend Configuration (for Docker)
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
